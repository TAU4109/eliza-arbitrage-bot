# ===========================================
# ElizaOS Arbitrage Bot Configuration
# ===========================================

# ----------------------------------------
# Ethereum Network Configuration
# ----------------------------------------
EVM_PRIVATE_KEY=0x...  # Your wallet private key (with 0x prefix)
EVM_PROVIDER_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
ETHEREUM_WS_URL=wss://mainnet.infura.io/ws/v3/YOUR_PROJECT_ID

# ----------------------------------------
# Flashbots Configuration
# ----------------------------------------
FLASHBOTS_RELAY_SIGNING_KEY=0x...  # Flashbots bundle signing key
BUNDLE_EXECUTOR_ADDRESS=0x...      # Your bundle executor address

# ----------------------------------------
# AI Model Configuration
# ----------------------------------------
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here  # Alternative to Anthropic

# ----------------------------------------
# Arbitrage Trading Parameters
# ----------------------------------------
ARBITRAGE_PROFIT_THRESHOLD=0.01      # Minimum profit threshold (1%)
ARBITRAGE_MAX_GAS_PRICE=50000000000  # Max gas price in wei (50 gwei)
ARBITRAGE_SLIPPAGE_TOLERANCE=0.5     # Slippage tolerance (0.5%)
ARBITRAGE_MAX_POSITION_SIZE=1.0      # Maximum position size in ETH
ARBITRAGE_MAX_DAILY_TRADES=10        # Maximum trades per day

# ----------------------------------------
# Risk Management
# ----------------------------------------
STOP_LOSS_THRESHOLD=0.05            # Stop loss at 5% loss
COOLDOWN_PERIOD=300                 # Cooldown between trades (seconds)

# ----------------------------------------
# Deployment Configuration
# ----------------------------------------
DAEMON_PROCESS=true                 # Set to true for cloud deployment
LOG_LEVEL=info                      # Log level: debug, info, warn, error
LOG_JSON_FORMAT=true               # Use JSON logging format

# ----------------------------------------
# Network Selection (uncomment one)
# ----------------------------------------
# ETHEREUM_NETWORK=mainnet          # Mainnet (production)
# ETHEREUM_NETWORK=sepolia          # Sepolia testnet (testing)

# ----------------------------------------
# Database Configuration (optional)
# ----------------------------------------
# DATABASE_URL=postgresql://...     # Optional: external database
# REDIS_URL=redis://...             # Optional: Redis for caching
